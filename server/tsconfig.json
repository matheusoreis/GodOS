{
    "compilerOptions": {
        /* Saída do build */
        "rootDir": "src",
        "outDir": "dist",

        /* Compatibilidade com Node moderno */
        "target": "ES2024",
        "module": "nodenext",
        "lib": ["ES2024"],
        "types": ["node"],

        /* Mapas e declarações */
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,

        /* Regras de tipo rigorosas */
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,

        /* Módulos e imports */
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noUncheckedSideEffectImports": true,

        /* Performance */
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
